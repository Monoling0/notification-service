{
  "Persistence": {
    "Postgres": {
      "ConnectionString": "Host=localhost;Port=6532;Database=notification;Username=notification;Password=notification"
    }
  },
  "Kafka": {
    "Consumer": {
      "BootstrapServers": "localhost:9092",
      "GroupId": "notification-service",
      "EnableAutoCommit": false,
      "EnableAutoOffsetStore": false,
      "AutoOffsetReset": "Earliest",
      "ClientId": "notification-service"
    },
    "Producer": {
      "BootstrapServers": "localhost:9092",
      "ClientId": "notification-service",
      "MessageTimeoutMs": 30000
    },
    "Batching": {
      "MaxBatchSize": 100,
      "BatchTimeout": "00:00:05",
      "ChannelCapacity": 100,
      "WaitWhenChannelFull": true
    },
    "Dlq": {
      "Enabled": true,
      "TopicSuffix": ".dlq"
    },
    "Client": {
      "SecurityProtocol": null,
      "SaslMechanism": null,
      "SaslUsername": null,
      "SaslPassword": null,
      "SslCaLocation": null,
      "EnableSslCertificateVerification": true,
      "AdditionalConfig": {}
    },
    "Topics": {
      "UserEvents": "user.events",
      "ProgressEvents": "progress.events",
      "CourseEvents": "course.events",
      "FeedEvents": "feed.events",
      "UserEmailRequests": "user.email.requests",
      "UserEmailResponses": "user.email.responses"
    },
    "Processing": {
      "MaxParallelism": 8,
      "CommitOnError": true,
      "PublishToDlqOnError": true
    }
  },
  "Email": {
    "Sender": {
      "Host": "localhost",
      "Port": 1025,
      "Username": null,
      "Password": null,
      "UseSsl": false,
      "UseStartTls": false,
      "TimeoutMs": 10000,
      "SenderEmail": "no-reply@monolingo.local",
      "SenderName": "Monolingo",
      "AllowInvalidCertificates": true
    },
    "Outbox": {
      "BatchSize": 100,
      "MaxAttempts": 10,
      "MaxParallelism": 8,
      "PollInterval": "00:00:05",
      "BaseBackoff": "00:00:05",
      "MaxBackoff": "00:00:30"
    },
    "RateLimit": {
      "Limit": 50,
      "Period": "00:01:00",
      "QueueLimit": 100
    }
  }
}
